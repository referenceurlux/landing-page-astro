---
import { WordpressServices } from "../../data/wordpress";
interface Props {
  slug: string;
}
const {slug} = Astro.props;
const page = await WordpressServices.getPageBySlug(slug);
const valeurs = page.acf.liste_valeurs_5;
---

<section id="valeurs" class="pt-24 lg:pt-40">
  <div class="container mx-auto">
    <div class="grid grid-cols-12 gap-4 relative">
      <div class="col-span-12 lg:col-span-5 relative mb-8 lg:mb-0 font-montserrat">
        <h2 class="text-[--primary-color] text-2xl lg:text-5xl font-semibold mb-6">{page.acf.titre_valeurs_5}</h2>
        <p class="text-sm lg:text-base w-4/5 lg:w-3/5">{page.acf.texte_valeurs_5}</p>
      </div>
      <div class="col-span-12 lg:col-span-7 flex flex-col lg:flex-row gap-8 lg:gap-4">
        {
          valeurs.map((valeur) => (
            <div class="font-montserrat flex gap-4 flex-col w-3/4 lg:w-1/3 justify-between">
              <div class="relative flex items-center w-fit">
                <img
                  class="object-cover"
                  src={valeur.icone.url}
                  alt={valeur.icone.description}
                />
                <div class="absolute w-6 h-6 bg-white rounded-full right-0 top-0 flex -translate-y-1/4 translate-x-1/4 justify-center items-center shadow-lg">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="11.784"
                    height="7.996"
                    viewBox="0 0 11.784 7.996"
                    class="fill-[--primary-color]"
                  >
                    <path
                      id="check-light_1_"
                      data-name="check-light (1)"
                      d="M11.712,96.172a.422.422,0,0,1,0,.595l-7.156,7.156a.422.422,0,0,1-.595,0L.172,100.135a.42.42,0,0,1,.595-.595l3.491,3.491,6.859-6.859A.422.422,0,0,1,11.712,96.172Z"
                      transform="translate(-0.05 -96.05)"
                    />
                  </svg>
                </div>
              </div>
              <div class="">
                <h5 class="font-semibold text-lg lg:text-2xl">{valeur.titre}</h5>
                <span class="text-sm lg:text-base">{valeur.description}</span>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>