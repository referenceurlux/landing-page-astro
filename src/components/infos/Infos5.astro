---
import { WordpressServices } from "../../data/wordpress";
interface Props {
  slug: string;
}
const { slug } = Astro.props;
const page = await WordpressServices.getPageBySlug(slug);
---

<section id="services" class="pt-40">
  <div class="container mx-auto">
    <div class="grid grid-cols-12 gap-4 relative">
      <div class="col-span-12 lg:col-span-5 flex gap-4 order-2 lg:order-1">
        <div class="flex flex-col gap-4 ">
          <img class="h-1/3 w-full object-cover" src={page.acf.image_1_infos_5.url ? page.acf.image_1_infos_5.url : null} alt={page.acf.image_1_infos_5.description ? page.acf.image_1_infos_5.description : null}>
          <img class="h-2/3 w-full object-cover" src={page.acf.image_2_infos_5.url ? page.acf.image_2_infos_5.url : null} alt={page.acf.image_2_infos_5.description ? page.acf.image_2_infos_5.description : null}>
        </div>
        <div class="flex flex-col gap-4 translate-y-16">
          <img class="h-2/3 w-full object-cover" src={page.acf.image_3_infos_5.url ? page.acf.image_3_infos_5.url : null} alt={page.acf.image_3_infos_5.description ? page.acf.image_3_infos_5.description : null}>
          <img class="h-1/3 w-full object-cover" src={page.acf.image_4_infos_5.url ? page.acf.image_4_infos_5.url : null} alt={page.acf.image_4_infos_5.description ? page.acf.image_4_infos_5.description : null}>
        </div>
      </div>
      <div
        data-aos="fade-up"
        class="col-span-12 lg:col-span-6 lg:col-end-13 font-montserrat flex flex-col justify-center items-start order-1 lg:order-2"
      >
        <div class="flex flex-col">
          <h2
            class="font-semibold text-[--primary-color] text-3xl lg:text-5xl mb-8"
          >
            {page.acf.titre_infos_5 ? page.acf.titre_infos_5 : null}
          </h2>
          <div class="mb-12 text-sm lg:text-base">
            <Fragment set:html={page.acf.texte_infos_5 ? page.acf.texte_infos_5 : null} />
          </div>
        </div>
        <a
          class="font-montserrat text-sm lg:text-base text-[--primary-color] border-2 border-[--primary-color] font-semibold py-4 px-16 mb-8 rounded-full transition-all z-3"
          href="#contact">{page.acf.bouton_infos_5 ? page.acf.bouton_infos_5 : null}</a
        >
      </div>
    </div>
  </div>
</section>
