---
import { WordpressServices } from "../../data/wordpress";
interface Props {
  slug: string;
}
const { slug } = Astro.props;
const page = await WordpressServices.getPageBySlug(slug);
const liste = page.acf.liste_about_5;
---

<section id="about" class="pt-24 lg:pt-40">
  <div class="container mx-auto">
    <div class="grid grid-cols-12 gap-4 relative">
      <div
        data-aos="fade-up"
        class="col-span-12 font-montserrat flex flex-col lg:flex-row justify-between lg:items-center gap-4"
      >
        <div class="flex flex-col lg:w-1/2">
          <h2
            class="font-semibold text-[--primary-color] text-3xl lg:text-5xl mb-8"
          >
            {page.acf.titre_about_5}
          </h2>
          <div class="text-sm lg:text-base">
            <Fragment set:html={page.acf.texte_about_5} />
          </div>
        </div>
        <a
          class="font-montserrat w-fit text-[--primary-color] text-sm lg:text-base border-2 border-[--primary-color] font-semibold py-4 px-16 rounded-full transition-all z-3"
          href="#contact">{page.acf.bouton_about_5}</a
        >
      </div>
      <div class="col-span-12 lg:col-span-6 font-montserrat py-16 flex justify-between flex-wrap gap-y-10">
        {liste.map((item) => (
          <div class="flex flex-col w-1/2">
            <span class="font-semibold text-[--primary-color] text-3xl lg:text-5xl mb-6">{item.chiffre}</span>
            <h4 class="font-semibold text-[--primary-color] text-lg lg:text-2xl mb-2">{item.titre}</h4>
            <p class=" text-xs lg:text-sm w-4/5">{item.texte}</p>
          </div>
        ))}
      </div>
      <div class="col-span-12 lg:col-span-5 lg:col-end-13 flex gap-4">
        <div class="flex flex-col gap-4 translate-y-16">
          <img class="h-1/3 w-full object-cover" src={page.acf.image_1_about_5.url} alt={page.acf.image_1_about_5.description}>
          <img class="h-2/3 w-full object-cover" src={page.acf.image_2_about_5.url} alt={page.acf.image_2_about_5.description}>
        </div>
        <div class="flex flex-col gap-4">
          <img class="h-2/3 w-full object-cover" src={page.acf.image_3_about_5.url} alt={page.acf.image_3_about_5.description}>
          <img class="h-1/3 w-full object-cover" src={page.acf.image_4_about_5.url} alt={page.acf.image_4_about_5.description}>
        </div>
      </div>
    </div>
  </div>
</section>
